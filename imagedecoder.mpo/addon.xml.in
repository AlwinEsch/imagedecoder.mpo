<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="imagedecoder.mpo"
  version="1.0.0"
  name="MPO image decoder"
  provider-name="spiff">
  <requires>@ADDON_DEPENDS@</requires>
  <extension
    point="kodi.imagedecoder"
    library_@PLATFORM@="@LIBRARY_FILENAME@"
    extension=".mpo"
    mimetype="image/mpo"/>
  <extension point="xbmc.addon.metadata">
    <summary>libmpo based image decoder</summary>
    <description>libmpo based image decoder</description>
    <platform>@PLATFORM@</platform>
  </extension>
</addon>
